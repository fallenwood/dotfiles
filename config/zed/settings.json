// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "auto_update": false,
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-41"
    },
    "enabled": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "format_on_save": "on",
  "vim_mode": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_family": "Cascadia Code",
  // "ui_font_family": "Cascadia Code",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Kanagawa",
    "dark": "One Dark"
  },
  // "proxy": "socks5h://192.168.1.128:10800",
  "lsp": {
    "omnisharp": {
      "binary": {
        "path": "/home/vbox/.local/opt/Microsoft.CodeAnalysis.LanguageServer/Microsoft.CodeAnalysis.LanguageServer",
        "arguments": [
          "--logLevel",
          "Information",
          "--extensionLogDirectory",
          ".roslynls",
          "--stdio"
        ]
      }
    }
  }
}
